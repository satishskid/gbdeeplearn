---
import '../styles/global.css';

const {
  title = 'GreyBrain Academy',
  description = 'No-code AI learning for healthcare professionals with cohort-based training and AI-enabled support.',
  canonical = '',
  noindex = false
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="robots" content={noindex ? 'noindex,follow' : 'index,follow'} />
    {canonical ? <link rel="canonical" href={canonical} /> : null}
  </head>
  <body class="relative overflow-x-hidden">
    <div class="pointer-events-none absolute inset-0">
      <div class="absolute left-[-6rem] top-36 h-64 w-64 rounded-full bg-orange-200/30 blur-3xl"></div>
      <div class="absolute right-[-5rem] top-20 h-72 w-72 rounded-full bg-sky-300/25 blur-3xl"></div>
      <div class="absolute bottom-24 left-1/2 h-80 w-80 -translate-x-1/2 rounded-full bg-indigo-200/20 blur-3xl"></div>
    </div>
    <main class="relative z-10 mx-auto min-h-screen w-full max-w-6xl px-4 py-8 md:px-8 md:py-12">
      <header class="mb-6 flex flex-wrap items-center justify-between gap-3 rounded-2xl border border-slate-900/10 bg-white/70 px-4 py-3 backdrop-blur">
        <a href="/" class="text-sm font-extrabold uppercase tracking-[0.16em] text-slate-900">GreyBrain Academy</a>
        <nav class="flex items-center gap-2 text-sm font-semibold">
          <a href="/" class="rounded-lg px-3 py-1.5 text-slate-700 transition hover:bg-slate-100">Courses</a>
          <a href="/courses" class="rounded-lg px-3 py-1.5 text-slate-700 transition hover:bg-slate-100">Catalog</a>
          <a href="/tracks" class="rounded-lg px-3 py-1.5 text-slate-700 transition hover:bg-slate-100">Tracks</a>
          <a
            href="https://greybrain.ai/clinical-ai"
            target="_blank"
            rel="noreferrer"
            class="rounded-lg px-3 py-1.5 text-slate-700 transition hover:bg-slate-100"
          >
            Clinical AI Blogs
          </a>
          <a href="/platform" class="rounded-lg px-3 py-1.5 text-slate-700 transition hover:bg-slate-100">Platform</a>
          <a href="/learn" class="rounded-lg px-3 py-1.5 text-slate-700 transition hover:bg-slate-100">Learner Hub</a>
        </nav>
      </header>
      <slot />
    </main>
  </body>
</html>
