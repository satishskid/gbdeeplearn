---
import BaseLayout from '../layouts/BaseLayout.astro';

const SITE_ORIGIN = 'https://gbdeeplearn.pages.dev';

const studioFlow = [
  {
    title: 'Problem Validation',
    detail: 'Document a high-friction healthcare problem and validate demand through clinician and buyer interviews.'
  },
  {
    title: 'No-Code Prototype',
    detail: 'Build a first usable workflow with AI components and safety guardrails.'
  },
  {
    title: 'Pilot Design',
    detail: 'Define pilot success metrics, compliance checkpoints, and implementation boundaries.'
  },
  {
    title: 'Business Model',
    detail: 'Map pricing, distribution, and stakeholder incentives for adoption.'
  },
  {
    title: 'VC-Ready Capstone',
    detail: 'Package traction, evidence, and roadmap into an investable narrative.'
  }
];

const capstoneDeliverables = [
  'Problem brief and market relevance memo',
  'Prototype demo with workflow boundaries',
  'Pilot metrics dashboard and adoption model',
  'Risk register and governance response plan',
  'Investment memo + pitch narrative'
];
---

<BaseLayout
  title="Venture Studio | Path 3 Doctor AI Entrepreneurship"
  description="Doctor-led AI venture execution from problem validation to capstone investment readiness."
  canonical={`${SITE_ORIGIN}/venture-studio`}
>
  <section class="mb-8 rounded-[2rem] bg-slate-950 px-6 py-8 text-white shadow-2xl md:px-8 md:py-10">
    <p class="mb-3 inline-flex rounded-full bg-white/10 px-3 py-1 text-xs font-semibold uppercase tracking-[0.15em] text-amber-100">
      Path 3 â€¢ Doctor AI Entrepreneurship
    </p>
    <h1 class="text-3xl font-extrabold leading-tight md:text-4xl">Venture Studio</h1>
    <p class="mt-3 max-w-3xl text-sm text-slate-200 md:text-base">
      Build clinically grounded AI ventures with execution discipline: product, pilot, governance, and funding readiness.
    </p>
    <div class="mt-5 flex flex-wrap gap-2">
      <a href="/tracks/doctor-ai-entrepreneurship" class="inline-flex rounded-xl bg-white px-4 py-2 text-sm font-semibold text-slate-900 transition hover:bg-slate-100">
        Track Overview
      </a>
      <a href="/learn" class="inline-flex rounded-xl border border-white/30 bg-white/10 px-4 py-2 text-sm font-semibold text-white transition hover:bg-white/20">
        Enter Learner Workspace
      </a>
      <a href="/console" class="inline-flex rounded-xl border border-amber-300/50 bg-amber-500/10 px-4 py-2 text-sm font-semibold text-amber-100 transition hover:bg-amber-500/20">
        Open Coordinator Console
      </a>
    </div>
  </section>

  <section class="mb-8 rounded-3xl border border-slate-200 bg-white/80 p-5 shadow-lg">
    <h2 class="text-2xl font-extrabold text-slate-900">Venture Execution Flow</h2>
    <p class="mt-1 text-sm text-slate-600">Structured milestones from idea to deployable pilot and capstone financing narrative.</p>
    <div class="mt-4 grid gap-3 md:grid-cols-5">
      {studioFlow.map((step) => (
        <article class="rounded-xl border border-slate-200 bg-slate-50 px-3 py-3">
          <h3 class="text-sm font-bold text-slate-900">{step.title}</h3>
          <p class="mt-1 text-xs text-slate-600">{step.detail}</p>
        </article>
      ))}
    </div>
  </section>

  <section class="rounded-3xl border border-slate-200 bg-white/80 p-5 shadow-lg">
    <h2 class="text-2xl font-extrabold text-slate-900">Capstone Deliverables</h2>
    <div class="mt-4 grid gap-3 md:grid-cols-2">
      {capstoneDeliverables.map((item) => (
        <article class="rounded-xl border border-slate-200 bg-slate-50 px-3 py-2 text-sm text-slate-700">{item}</article>
      ))}
    </div>
  </section>
</BaseLayout>
