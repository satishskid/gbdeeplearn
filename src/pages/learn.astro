---
import BaseLayout from '../layouts/BaseLayout.astro';
import LearnerWorkspace from '../components/LearnerWorkspace.jsx';
---

<BaseLayout
  title="GreyBrain Learner Hub"
  description="Learner access area for enrolled healthcare AI participants."
  canonical="https://gbdeeplearn.pages.dev/learn"
  noindex={true}
>
  <section class="mb-6 rounded-[2rem] bg-slate-950 px-6 py-8 text-white shadow-2xl md:px-8 md:py-10">
    <p class="mb-3 inline-flex rounded-full bg-white/10 px-3 py-1 text-xs font-semibold uppercase tracking-[0.15em] text-emerald-100">
      Student Mode
    </p>
    <h1 class="text-3xl font-extrabold leading-tight md:text-4xl">Learner Hub</h1>
    <p class="mt-3 max-w-3xl text-sm text-slate-200 md:text-base">
      Access pre-reads, assignment flow, course completion milestones, and certificate progress after enrollment.
    </p>
    <div class="mt-4">
      <a
        href="/"
        class="inline-flex rounded-xl border border-white/30 bg-white/10 px-4 py-2 text-sm font-semibold text-white transition hover:bg-white/20"
      >
        Back To Public Landing
      </a>
    </div>
  </section>

  <LearnerWorkspace client:load />
</BaseLayout>
