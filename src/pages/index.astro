---
import BaseLayout from '../layouts/BaseLayout.astro';
import ChatInterface from '../components/ChatInterface.jsx';
import CounselorChat from '../components/CounselorChat.jsx';
import WebinarLeadForm from '../components/WebinarLeadForm.jsx';
import ClinicalFeedPanel from '../components/ClinicalFeedPanel.jsx';
import { getClinicalFeedPosts, getCourseCatalog } from '../lib/academyData';
import { TRACKS } from '../lib/tracks';

const SITE_ORIGIN = 'https://gbdeeplearn.pages.dev';
const turnstileSiteKey = import.meta.env.PUBLIC_TURNSTILE_SITE_KEY || '1x00000000000000000000AA';
const blogPosts = await getClinicalFeedPosts(4);
const allCourses = await getCourseCatalog();
const featuredCourses = allCourses.slice(0, 6);

const urgencyLabels = ['Admissions Open', 'Filling Fast', 'Waitlist Closing Soon'];

const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'EducationalOrganization',
  name: 'GreyBrain Academy',
  url: `${SITE_ORIGIN}/`,
  sameAs: ['https://greybrain.ai/academy', 'https://greybrain.ai/clinical-ai'],
  description:
    'No-code AI learning for doctors and healthcare professionals through cohort training and practical implementation.',
  hasOfferCatalog: {
    '@type': 'OfferCatalog',
    name: 'GreyBrain Healthcare AI Courses',
    itemListElement: allCourses.map((course) => ({
      '@type': 'Course',
      name: course.name,
      url: `${SITE_ORIGIN}/courses/${course.slug}`,
      provider: {
        '@type': 'Organization',
        name: 'GreyBrain Academy'
      }
    }))
  }
};
---

<BaseLayout
  title="GreyBrain Academy | No-Code AI Courses for Doctors"
  description="Learn AI for healthcare practice, research, and entrepreneurship. Explore cohort-based courses, practical tracks, and guided AI tutoring."
  canonical={`${SITE_ORIGIN}/`}
>
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

  <section class="relative mb-8 overflow-hidden rounded-[2rem] bg-slate-950 px-6 py-10 text-white shadow-2xl md:px-10 md:py-12">
    <div class="absolute right-0 top-0 h-48 w-48 rounded-full bg-cyan-400/25 blur-3xl"></div>
    <div class="absolute bottom-0 left-0 h-44 w-44 rounded-full bg-amber-300/25 blur-3xl"></div>

    <div class="relative z-10 grid gap-6 lg:grid-cols-[1.3fr_0.7fr] lg:items-end">
      <div>
        <p class="mb-3 inline-flex rounded-full bg-white/10 px-3 py-1 text-xs font-semibold uppercase tracking-[0.15em] text-cyan-100">
          GreyBrain Academy
        </p>
        <h1 class="mb-4 text-3xl font-extrabold leading-tight md:text-5xl">
          Become An AI-Enabled Doctor, Operator, or Founder
        </h1>
        <p class="max-w-2xl text-base text-slate-200 md:text-lg">
          Cohort-based no-code AI learning for healthcare professionals. Learn with practical implementation workflows,
          mentor guidance, and personalized AI tutoring.
        </p>
      </div>

      <div class="grid gap-3 text-sm">
        <div class="rounded-2xl border border-white/20 bg-white/5 px-4 py-3">
          <p class="text-slate-300">Next Intake</p>
          <p class="mt-1 text-lg font-semibold text-white">Enrollment Window Open</p>
        </div>
        <div class="rounded-2xl border border-white/20 bg-white/5 px-4 py-3">
          <p class="text-slate-300">Learning Format</p>
          <p class="mt-1 text-lg font-semibold text-white">Cohort + AI Tutor + Projects</p>
        </div>
        <div class="rounded-2xl border border-white/20 bg-white/5 px-4 py-3">
          <p class="text-slate-300">Core Audience</p>
          <p class="mt-1 text-lg font-semibold text-white">Doctors and Healthcare Teams</p>
        </div>
      </div>
    </div>
  </section>

  <section class="mb-8 rounded-3xl border border-slate-900/10 bg-white/75 p-5 shadow-lg backdrop-blur md:p-6">
    <div class="mb-4 flex flex-wrap items-center justify-between gap-3">
      <div>
        <p class="text-xs font-semibold uppercase tracking-[0.14em] text-slate-500">Clinical AI Briefs</p>
        <h2 class="mt-1 text-2xl font-extrabold text-slate-900">Fresh Weekly Signals You Can Act On</h2>
        <p class="mt-1 text-sm text-slate-600">
          Keep your edge with high-frequency GreyBrain clinical AI updates. Learn first, then enroll before the next cohort closes.
        </p>
      </div>
      <a
        href="https://greybrain.ai/clinical-ai"
        target="_blank"
        rel="noreferrer"
        class="rounded-xl border border-slate-300 bg-white px-4 py-2 text-sm font-semibold text-slate-700 transition hover:border-slate-400 hover:bg-slate-50"
      >
        Read Clinical AI Feed
      </a>
    </div>

    <ClinicalFeedPanel client:load initialPosts={blogPosts} />
  </section>

  <section class="mb-8 rounded-3xl border border-slate-900/10 bg-white/75 p-5 shadow-lg backdrop-blur md:p-6">
    <div class="mb-4 flex flex-wrap items-center justify-between gap-3">
      <div>
        <p class="text-xs font-semibold uppercase tracking-[0.14em] text-slate-500">Choose Your Track</p>
        <h2 class="mt-1 text-2xl font-extrabold text-slate-900">Goal-Based Learning Paths</h2>
        <p class="mt-1 text-sm text-slate-600">Pick a role outcome and follow a curated sequence of courses with practical execution focus.</p>
      </div>
      <a href="/tracks" class="rounded-xl bg-slate-900 px-4 py-2 text-sm font-semibold text-white transition hover:bg-slate-800">
        Compare Tracks
      </a>
    </div>

    <div class="grid gap-3 md:grid-cols-3">
      {TRACKS.map((track) => (
        <article class="rounded-2xl border border-slate-200 bg-white p-4">
          <p class="text-xs font-semibold uppercase tracking-[0.13em] text-emerald-700">{track.duration}</p>
          <h3 class="mt-2 text-xl font-bold text-slate-900">{track.title}</h3>
          <p class="mt-2 text-sm text-slate-600">{track.tagline}</p>
          <p class="mt-2 text-xs text-slate-500">Ideal for: {track.idealFor}</p>
          <a href={`/tracks/${track.slug}`} class="mt-4 inline-flex rounded-xl border border-slate-300 px-3 py-2 text-sm font-semibold text-slate-700 transition hover:bg-slate-50">
            View Track
          </a>
        </article>
      ))}
    </div>
  </section>

  <section id="courses" class="mb-8 rounded-3xl border border-slate-900/10 bg-white/75 p-5 shadow-lg backdrop-blur md:p-6">
    <div class="mb-4 flex flex-wrap items-center justify-between gap-3">
      <div>
        <p class="text-xs font-semibold uppercase tracking-[0.14em] text-slate-500">Ongoing Courses</p>
        <h2 class="mt-1 text-2xl font-extrabold text-slate-900">Enroll In The Current Cohort Catalog</h2>
        <p class="mt-1 text-sm text-slate-600">Course pages now follow a consistent conversion template with outcomes, syllabus signals, and enrollment actions.</p>
      </div>
      <a href="/courses" class="rounded-xl bg-slate-900 px-4 py-2 text-sm font-semibold text-white transition hover:bg-slate-800">
        Browse All Courses
      </a>
    </div>

    <div class="grid gap-3 md:grid-cols-2 lg:grid-cols-3">
      {featuredCourses.map((course, index) => (
        <article class="rounded-2xl border border-slate-200 bg-white p-4">
          <p class="text-xs font-semibold uppercase tracking-[0.13em] text-amber-700">{urgencyLabels[index % urgencyLabels.length]}</p>
          <h3 class="mt-2 text-lg font-bold text-slate-900 line-clamp-2">{course.name}</h3>
          <p class="mt-2 text-sm text-slate-600 line-clamp-3">{course.shortDescription}</p>
          <p class="mt-2 text-xs text-slate-500">
            {course.lessonCount > 0 ? `${course.lessonCount} lessons` : 'Structured curriculum'}{course.rating > 0 ? ` â€¢ ${course.rating}/10 rating` : ''}
          </p>
          <div class="mt-4 flex flex-wrap gap-2">
            <a href={`/courses/${course.slug}`} class="rounded-xl border border-slate-300 px-3 py-2 text-sm font-semibold text-slate-700 transition hover:bg-slate-50">
              View Details
            </a>
            <a
              href={course.academyUrl}
              target="_blank"
              rel="noreferrer"
              class="rounded-xl bg-slate-900 px-3 py-2 text-sm font-semibold text-white transition hover:bg-slate-800"
            >
              Enroll Now
            </a>
          </div>
        </article>
      ))}
    </div>
  </section>

  <section class="mb-8 grid gap-4 md:grid-cols-3">
    <article class="rounded-2xl border border-slate-200/80 bg-white/80 p-4 backdrop-blur">
      <p class="text-xs font-semibold uppercase tracking-[0.14em] text-slate-500">AI-Native Delivery</p>
      <h3 class="mt-2 text-xl font-bold text-slate-900">Personalized Tutor Support</h3>
      <p class="mt-1 text-sm text-slate-600">Every learner gets guided AI support aligned to syllabus context and assignments.</p>
    </article>
    <article class="rounded-2xl border border-slate-200/80 bg-white/80 p-4 backdrop-blur">
      <p class="text-xs font-semibold uppercase tracking-[0.14em] text-slate-500">Healthcare Context</p>
      <h3 class="mt-2 text-xl font-bold text-slate-900">Built For Clinical Reality</h3>
      <p class="mt-1 text-sm text-slate-600">Workflows are tuned to healthcare communication, research, compliance, and operations.</p>
    </article>
    <article class="rounded-2xl border border-slate-200/80 bg-white/80 p-4 backdrop-blur">
      <p class="text-xs font-semibold uppercase tracking-[0.14em] text-slate-500">Career Outcomes</p>
      <h3 class="mt-2 text-xl font-bold text-slate-900">From AI-Curious to AI-Confident</h3>
      <p class="mt-1 text-sm text-slate-600">Build implementation-ready AI capability, not just theory, with guided project execution.</p>
    </article>
  </section>

  <CounselorChat client:load />
  <WebinarLeadForm client:load siteKey={turnstileSiteKey} />
  <ChatInterface client:load />

  <section class="mt-8 rounded-2xl border border-slate-200 bg-white/80 px-4 py-3 text-sm text-slate-600">
    Explore tracks on <a href="/tracks" class="ml-1 font-semibold text-sky-700 hover:text-sky-800">/tracks</a>, full catalog on
    <a href="/courses" class="ml-1 font-semibold text-sky-700 hover:text-sky-800">/courses</a>, partner story on
    <a href="/platform" class="ml-1 font-semibold text-sky-700 hover:text-sky-800">/platform</a>, and internal operations on
    <a href="/console" class="ml-1 font-semibold text-sky-700 hover:text-sky-800">/console</a>.
  </section>
</BaseLayout>
