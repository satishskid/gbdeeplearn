---
import BaseLayout from '../layouts/BaseLayout.astro';
import ChatInterface from '../components/ChatInterface.jsx';
import WebinarLeadForm from '../components/WebinarLeadForm.jsx';

const turnstileSiteKey = import.meta.env.PUBLIC_TURNSTILE_SITE_KEY || '1x00000000000000000000AA';

const blogHighlights = [
  {
    category: 'Clinical AI Trends',
    title: 'New use-cases from hospitals and clinics are dropping every week',
    summary:
      'Follow the Clinical AI stream to stay ahead of what healthcare teams are actually shipping with AI, not just theory.',
    href: 'https://greybrain.ai/clinical-ai'
  },
  {
    category: 'Prompt + Workflow',
    title: 'Weekly playbooks for no-code AI workflows in healthcare',
    summary:
      'See practical frameworks you can copy into your own clinical education, documentation, and patient communication workflows.',
    href: 'https://greybrain.ai/clinical-ai'
  },
  {
    category: 'FOMO Alert',
    title: 'If you skip this cycle, you miss what peers are already adopting',
    summary:
      'Use the latest blog updates to shortlist what to learn now, then join the next GreyBrain cohort before seats fill.',
    href: 'https://greybrain.ai/clinical-ai'
  }
];

const ongoingCourses = [
  {
    title: 'Basics of LLMs for Clinical Practice',
    format: 'Live cohort + implementation labs',
    urgency: 'Admissions open now',
    href: 'https://greybrain.ai/academy'
  },
  {
    title: 'ChatGPT Mastery for Healthcare Professionals',
    format: 'Hands-on no-code workflows',
    urgency: 'Next batch filling fast',
    href: 'https://greybrain.ai/academy'
  },
  {
    title: 'NotebookLM for Medical Professionals',
    format: 'Research-to-practice accelerator',
    urgency: 'Priority waitlist active',
    href: 'https://greybrain.ai/academy'
  }
];

const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'EducationalOrganization',
  name: 'GreyBrain Academy',
  url: 'https://gbdeeplearn.pages.dev/',
  sameAs: ['https://greybrain.ai/academy', 'https://greybrain.ai/clinical-ai'],
  description:
    'No-code AI courses for healthcare professionals with cohort-based training, guided tutoring, and implementation-focused outcomes.',
  hasOfferCatalog: {
    '@type': 'OfferCatalog',
    name: 'Healthcare AI Courses',
    itemListElement: ongoingCourses.map((course) => ({
      '@type': 'Course',
      name: course.title,
      url: course.href,
      educationalCredentialAwarded: 'Course completion certificate'
    }))
  }
};
---

<BaseLayout
  title="GreyBrain Academy | No-Code AI Courses for Healthcare Professionals"
  description="Join cohort-based no-code AI programs for healthcare professionals. Learn practical AI workflows, get guided tutoring, and enroll in the next GreyBrain Academy batch."
  canonical="https://gbdeeplearn.pages.dev/"
>
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

  <section class="relative mb-8 overflow-hidden rounded-[2rem] bg-slate-950 px-6 py-10 text-white shadow-2xl md:px-10 md:py-12">
    <div class="absolute right-0 top-0 h-48 w-48 rounded-full bg-cyan-400/25 blur-3xl"></div>
    <div class="absolute bottom-0 left-0 h-44 w-44 rounded-full bg-amber-300/25 blur-3xl"></div>

    <div class="relative z-10 grid gap-6 lg:grid-cols-[1.3fr_0.7fr] lg:items-end">
      <div>
        <p class="mb-3 inline-flex rounded-full bg-white/10 px-3 py-1 text-xs font-semibold uppercase tracking-[0.15em] text-cyan-100">
          GreyBrain Academy
        </p>
        <h1 class="mb-4 text-3xl font-extrabold leading-tight md:text-5xl">
          No-Code AI Courses For Healthcare Professionals
        </h1>
        <p class="max-w-2xl text-base text-slate-200 md:text-lg">
          Learn practical AI that you can deploy in real healthcare workflows. Join live cohorts, get personalized AI
          tutoring, and complete implementation-ready assignments.
        </p>
      </div>

      <div class="grid gap-3 text-sm">
        <div class="rounded-2xl border border-white/20 bg-white/5 px-4 py-3">
          <p class="text-slate-300">Current Intake</p>
          <p class="mt-1 text-lg font-semibold text-white">Enrollment Window Open</p>
        </div>
        <div class="rounded-2xl border border-white/20 bg-white/5 px-4 py-3">
          <p class="text-slate-300">Learning Mode</p>
          <p class="mt-1 text-lg font-semibold text-white">Cohort + Guided AI Tutor</p>
        </div>
        <div class="rounded-2xl border border-white/20 bg-white/5 px-4 py-3">
          <p class="text-slate-300">Audience</p>
          <p class="mt-1 text-lg font-semibold text-white">Doctors, Nurses, Admin Teams</p>
        </div>
      </div>
    </div>
  </section>

  <section class="mb-8 rounded-3xl border border-slate-900/10 bg-white/75 p-5 shadow-lg backdrop-blur md:p-6">
    <div class="flex flex-wrap items-center justify-between gap-3">
      <div>
        <p class="text-xs font-semibold uppercase tracking-[0.14em] text-slate-500">Clinical AI Feed</p>
        <h2 class="mt-1 text-2xl font-extrabold text-slate-900">Stay Ahead With Weekly Blog Drops</h2>
        <p class="mt-1 text-sm text-slate-600">Read what healthcare peers are applying right now, then enroll before the next cohort closes.</p>
      </div>
      <a
        href="https://greybrain.ai/clinical-ai"
        target="_blank"
        rel="noreferrer"
        class="rounded-xl border border-slate-300 bg-white px-4 py-2 text-sm font-semibold text-slate-700 transition hover:border-slate-400 hover:bg-slate-50"
      >
        Read Clinical AI Blogs
      </a>
    </div>

    <div class="mt-4 grid gap-3 md:grid-cols-3">
      {blogHighlights.map((post) => (
        <article class="rounded-2xl border border-slate-200 bg-white p-4">
          <p class="text-xs font-semibold uppercase tracking-[0.13em] text-rose-700">{post.category}</p>
          <h3 class="mt-2 text-lg font-bold text-slate-900">{post.title}</h3>
          <p class="mt-2 text-sm text-slate-600">{post.summary}</p>
          <a
            href={post.href}
            target="_blank"
            rel="noreferrer"
            class="mt-3 inline-flex text-sm font-semibold text-sky-700 hover:text-sky-800"
          >
            Read now ->
          </a>
        </article>
      ))}
    </div>
  </section>

  <section id="courses" class="mb-8 rounded-3xl border border-slate-900/10 bg-white/75 p-5 shadow-lg backdrop-blur md:p-6">
    <div class="mb-4 flex flex-wrap items-center justify-between gap-3">
      <div>
        <p class="text-xs font-semibold uppercase tracking-[0.14em] text-slate-500">Ongoing Programs</p>
        <h2 class="mt-1 text-2xl font-extrabold text-slate-900">Join The Next Healthcare AI Cohort</h2>
        <p class="mt-1 text-sm text-slate-600">Choose your track and reserve your seat from the current academy lineup.</p>
      </div>
      <a
        href="https://greybrain.ai/academy"
        target="_blank"
        rel="noreferrer"
        class="rounded-xl bg-slate-900 px-4 py-2 text-sm font-semibold text-white transition hover:bg-slate-800"
      >
        Explore All Courses
      </a>
    </div>

    <div class="grid gap-3 md:grid-cols-3">
      {ongoingCourses.map((course) => (
        <article class="rounded-2xl border border-slate-200 bg-white p-4">
          <p class="text-xs font-semibold uppercase tracking-[0.13em] text-emerald-700">{course.urgency}</p>
          <h3 class="mt-2 text-xl font-bold text-slate-900">{course.title}</h3>
          <p class="mt-2 text-sm text-slate-600">{course.format}</p>
          <a
            href={course.href}
            target="_blank"
            rel="noreferrer"
            class="mt-4 inline-flex rounded-xl border border-slate-300 px-3 py-2 text-sm font-semibold text-slate-700 transition hover:bg-slate-50"
          >
            Enroll Interest
          </a>
        </article>
      ))}
    </div>
  </section>

  <section class="mb-8 grid gap-4 md:grid-cols-3">
    <article class="rounded-2xl border border-slate-200/80 bg-white/80 p-4 backdrop-blur">
      <p class="text-xs font-semibold uppercase tracking-[0.14em] text-slate-500">AI-Native Delivery</p>
      <h3 class="mt-2 text-xl font-bold text-slate-900">Personalized Tutor Support</h3>
      <p class="mt-1 text-sm text-slate-600">Every learner gets guided AI help mapped to course syllabus and assignments.</p>
    </article>
    <article class="rounded-2xl border border-slate-200/80 bg-white/80 p-4 backdrop-blur">
      <p class="text-xs font-semibold uppercase tracking-[0.14em] text-slate-500">Healthcare Focus</p>
      <h3 class="mt-2 text-xl font-bold text-slate-900">Built For Clinical Teams</h3>
      <p class="mt-1 text-sm text-slate-600">Course examples and workflows are aligned to healthcare operations and compliance realities.</p>
    </article>
    <article class="rounded-2xl border border-slate-200/80 bg-white/80 p-4 backdrop-blur">
      <p class="text-xs font-semibold uppercase tracking-[0.14em] text-slate-500">Career Outcomes</p>
      <h3 class="mt-2 text-xl font-bold text-slate-900">Implementation-Ready Skills</h3>
      <p class="mt-1 text-sm text-slate-600">Move from AI curiosity to deployable no-code systems with mentor feedback and certification.</p>
    </article>
  </section>

  <WebinarLeadForm client:load siteKey={turnstileSiteKey} />
  <ChatInterface client:load />

  <section class="mt-8 rounded-2xl border border-slate-200 bg-white/80 px-4 py-3 text-sm text-slate-600">
    For platform partnerships, investors, or enterprise licensing:
    <a href="/platform" class="ml-1 font-semibold text-sky-700 hover:text-sky-800">visit the Platform page</a>.
    Team operations console:
    <a href="/console" class="ml-1 font-semibold text-sky-700 hover:text-sky-800">open console</a>.
  </section>
</BaseLayout>
