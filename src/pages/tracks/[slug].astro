---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCourseCatalog } from '../../lib/academyData';
import { TRACKS, getTrackBySlug, hydrateTrack } from '../../lib/tracks';

export async function getStaticPaths() {
  return TRACKS.map((track) => ({
    params: { slug: track.slug },
    props: { trackSlug: track.slug }
  }));
}

const { trackSlug } = Astro.props;
const rawTrack = getTrackBySlug(trackSlug);
const catalog = await getCourseCatalog();
const track = hydrateTrack(rawTrack, catalog);
const hasResearchLab = track?.slug === 'ai-research-accelerator';
---

<BaseLayout
  title={`${track.title} | GreyBrain Track`}
  description={track.tagline}
  canonical={`https://gbdeeplearn.pages.dev/tracks/${track.slug}`}
>
  <section class="mb-8 rounded-[2rem] bg-slate-950 px-6 py-8 text-white shadow-2xl md:px-8 md:py-10">
    <p class="mb-3 inline-flex rounded-full bg-white/10 px-3 py-1 text-xs font-semibold uppercase tracking-[0.15em] text-cyan-100">
      Track Detail
    </p>
    <h1 class="text-3xl font-extrabold leading-tight md:text-4xl">{track.title}</h1>
    <p class="mt-3 max-w-3xl text-sm text-slate-200 md:text-base">{track.tagline}</p>
    <div class="mt-4 flex flex-wrap gap-2 text-xs">
      <span class="rounded-full bg-white/10 px-3 py-1">{track.duration}</span>
      <span class="rounded-full bg-white/10 px-3 py-1">Ideal for: {track.idealFor}</span>
      <span class="rounded-full bg-white/10 px-3 py-1">{track.includedCourses.length} included courses</span>
    </div>
    <div class="mt-5 flex flex-wrap gap-2">
      <a href="/courses" class="inline-flex rounded-xl bg-white px-4 py-2 text-sm font-semibold text-slate-900 transition hover:bg-slate-100">
        Browse Courses
      </a>
      <a href="/learn" class="inline-flex rounded-xl border border-white/30 bg-white/10 px-4 py-2 text-sm font-semibold text-white transition hover:bg-white/20">
        Learner Hub
      </a>
      {hasResearchLab ? (
        <a
          href="/research-lab"
          class="inline-flex rounded-xl border border-cyan-300/50 bg-cyan-500/10 px-4 py-2 text-sm font-semibold text-cyan-100 transition hover:bg-cyan-500/20"
        >
          Open In-Silico Research Lab
        </a>
      ) : null}
    </div>
  </section>

  <section class="mb-8 rounded-3xl border border-slate-200 bg-white/80 p-5 shadow-lg">
    <h2 class="text-2xl font-extrabold text-slate-900">Track Outcomes</h2>
    <div class="mt-4 grid gap-3 md:grid-cols-3">
      {track.outcomes.map((outcome) => (
        <article class="rounded-xl border border-slate-200 bg-slate-50 px-3 py-2 text-sm text-slate-700">{outcome}</article>
      ))}
    </div>
  </section>

  {hasResearchLab ? (
    <section class="mb-8 rounded-3xl border border-cyan-200 bg-cyan-50/70 p-5 shadow-sm">
      <div class="flex flex-wrap items-center justify-between gap-3">
        <div>
          <p class="text-xs font-semibold uppercase tracking-[0.13em] text-cyan-700">Path 2 Research Stack</p>
          <h2 class="mt-1 text-2xl font-extrabold text-slate-900">Hypothesis to Conclusion Learning Loop</h2>
          <p class="mt-1 text-sm text-slate-700">
            Learn research methodology first, then AI tools: promptable literature synthesis, RAG tutor guidance, and experiment workflows.
          </p>
        </div>
        <a href="/research-lab" class="inline-flex rounded-xl bg-slate-900 px-4 py-2 text-sm font-semibold text-white transition hover:bg-slate-800">
          View Path 2 Scaffold
        </a>
      </div>
    </section>
  ) : null}

  <section class="rounded-3xl border border-slate-200 bg-white/80 p-5 shadow-lg">
    <h2 class="text-2xl font-extrabold text-slate-900">Included Courses</h2>
    <div class="mt-4 grid gap-4 md:grid-cols-2">
      {track.includedCourses.map((course) => (
        <article class="rounded-2xl border border-slate-200 bg-white p-4">
          <h3 class="text-lg font-bold text-slate-900">{course.name}</h3>
          <p class="mt-2 text-sm text-slate-600 line-clamp-4">{course.shortDescription}</p>
          <p class="mt-2 text-xs text-slate-500">
            {course.lessonCount > 0 ? `${course.lessonCount} lessons` : 'Structured curriculum'}{course.rating > 0 ? ` â€¢ ${course.rating}/10 rating` : ''}
          </p>
          <div class="mt-4 flex flex-wrap gap-2">
            <a href={`/courses/${course.slug}`} class="rounded-xl border border-slate-300 px-3 py-2 text-sm font-semibold text-slate-700 transition hover:bg-slate-50">
              Course Details
            </a>
            <a
              href={course.academyUrl}
              target="_blank"
              rel="noreferrer"
              class="rounded-xl bg-slate-900 px-3 py-2 text-sm font-semibold text-white transition hover:bg-slate-800"
            >
              Enroll
            </a>
          </div>
        </article>
      ))}
    </div>
  </section>
</BaseLayout>
